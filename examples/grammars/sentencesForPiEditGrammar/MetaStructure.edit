PiInstance {
    @projection
    [${self.name} = {
        ${self.propertyDefs
            @vertical
            @separator [,\n]
        }
    }
    ]
}
PiPropertyInstance {
    @projection
    [${self.property.name} : ${self.value}]
//    [${self.property.name} : \"${self.value}\"]
}
